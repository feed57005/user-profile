# Look & Feel {{{
verbose off
startup_message off
caption always "%?%F%{.g.}%? %{+u}%n - %{+b w}%t%{-}%=[%h][%H]"
hardstatus alwayslastline "%{=}%{g}[ %{W}%H %{g}][%= %{w}%?%-Lw%?%{r}(%{W}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][ %{B}%Y-%m-%d %{W}%c:%s %{g}]"
# }}}
# Key bindings {{{

bind ' ' windowlist -b
bind ^x remove
bind ^v eval "split -v" "focus down" 

